{
  "name": "log-visualizer",
  "displayName": "Rust Log Visualizer",
  "description": "Visualize structured logs from Rust tracing library",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Debuggers",
    "Visualization"
  ],
  "activationEvents": [
    "onView:logExplorer",
    "onView:logVariableExplorer",
    "onView:callStackExplorer",
    "onView:pinnedLogs",
    "onCommand:log-visualizer.showLogs",
    "onCommand:log-visualizer.refreshLogs",
    "onCommand:log-visualizer.createSampleLogs",
    "onCommand:log-visualizer.loadJaegerTrace",
    "onCommand:log-visualizer.setJaegerEndpoint",
    "onCommand:log-visualizer.loadAxiomTrace",
    "onCommand:log-visualizer.setAxiomDataset"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Log Visualizer",
      "properties": {}
    },
    "commands": [
      {
        "command": "log-visualizer.filterLogs",
        "title": "Filter Log Levels",
        "icon": "$(filter)"
      },
      {
        "command": "log-visualizer.toggleSort",
        "title": "Toggle Sort Mode",
        "icon": "$(sort-precedence)"
      },
      {
        "command": "log-visualizer.refreshLogs",
        "title": "Refresh Logs",
        "icon": "$(refresh)"
      },
      {
        "command": "log-visualizer.setRepoPath",
        "title": "Set Repository Root",
        "icon": "$(folder)"
      },
      {
        "command": "log-visualizer.clearExplorers",
        "title": "Clear Views",
        "icon": "$(clear-all)"
      },
      {
        "command": "log-visualizer.pinLog",
        "title": "Pin Log",
        "icon": "$(pin)"
      },
      {
        "command": "log-visualizer.unpinLog",
        "title": "Unpin Log",
        "icon": "$(pinned)"
      },
      {
        "command": "log-visualizer.clearPins",
        "title": "Clear All Pins",
        "icon": "$(clear-all)"
      },
      {
        "command": "log-visualizer.copyVariableValue",
        "title": "Copy Variable Value"
      },
      {
        "command": "log-visualizer.copySpanValue",
        "title": "Copy Span Value"
      },
      {
        "command": "log-visualizer.loadJaegerTrace",
        "title": "Load Jaeger Trace",
        "icon": "$(globe)"
      },
      {
        "command": "log-visualizer.setJaegerEndpoint",
        "title": "Set Jaeger API Endpoint",
        "icon": "$(gear)"
      },
      {
        "command": "log-visualizer.loadAxiomTrace",
        "title": "Load Axiom Trace",
        "icon": "$(server)"
      },
      {
        "command": "log-visualizer.setAxiomDataset",
        "title": "Set Axiom Dataset",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "log-visualizer",
          "title": "Log Visualizer",
          "icon": "resources/log-icon.svg"
        }
      ]
    },
    "views": {
      "log-visualizer": [
        {
          "id": "logExplorer",
          "name": "Logs",
          "icon": "media/dep.svg",
          "contextualTitle": "Logs"
        },
        {
          "id": "logVariableExplorer",
          "name": "Variables",
          "contextualTitle": "Variables"
        },
        {
          "id": "callStackExplorer",
          "name": "Call Stack",
          "contextualTitle": "Call Stack"
        },
        {
          "id": "pinnedLogs",
          "name": "Pinned Logs",
          "contextualTitle": "Pinned Logs"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "log-visualizer.filterLogs",
          "when": "view == logExplorer",
          "group": "navigation@1"
        },
        {
          "command": "log-visualizer.toggleSort",
          "when": "view == logExplorer",
          "group": "navigation@2"
        },
        {
          "command": "log-visualizer.refreshLogs",
          "when": "view == logExplorer",
          "group": "navigation@3"
        },
        {
          "command": "log-visualizer.loadJaegerTrace",
          "when": "view == logExplorer",
          "group": "navigation@4"
        },
        {
          "command": "log-visualizer.loadAxiomTrace",
          "when": "view == logExplorer",
          "group": "navigation@5"
        },
        {
          "command": "log-visualizer.clearExplorers",
          "when": "view == logVariableExplorer",
          "group": "navigation@1"
        },
        {
          "command": "log-visualizer.clearExplorers",
          "when": "view == callStackExplorer",
          "group": "navigation@1"
        },
        {
          "command": "log-visualizer.clearPins",
          "when": "view == pinnedLogs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "log-visualizer.copySpanValue",
          "when": "viewItem == spanDetail",
          "group": "inline"
        },
        {
          "command": "log-visualizer.pinLog",
          "when": "view == logExplorer && viewItem == unpinned",
          "group": "inline@1"
        },
        {
          "command": "log-visualizer.unpinLog",
          "when": "view == logExplorer && viewItem == pinned || view == pinnedLogs && viewItem == pinned",
          "group": "inline@1"
        }
      ]
    },
    "keybindings": []
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/node": "^16.18.36",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "glob": "^8.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@axiomhq/js": "^1.3.1",
    "@vscode/vsce": "^3.3.2",
    "chalk": "^4.1.2",
    "dayjs": "^1.11.9",
    "node-fetch": "^2.6.7"
  }
}
